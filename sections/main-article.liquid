{%- liquid
  assign full_width = section.settings.full_width
  if section.settings.enable_lazy
    assign lazy = 'lazy'
  else
    assign lazy = 'eager'
  endif
  assign text_color = false
  if section.settings.text_color.alpha != 0.0 and section.settings.text_color.alpha != blank
    assign text_color = true
    assign text_color_section = section.settings.text_color
  endif
  assign text_color_hover = false
  if section.settings.text_color_hover.alpha != 0.0 and section.settings.text_color_hover.alpha != blank
    assign text_color_hover = true
    assign text_color_hover_section = section.settings.text_color_hover
  endif
  assign button_color = false
  if section.settings.button_color.alpha != 0.0 and section.settings.button_color.alpha != blank
    assign button_color = true
    assign button_color_section = section.settings.button_color
  endif
  assign line_color = false
  if section.settings.line_color.alpha != 0.0 and section.settings.line_color.alpha != blank
    assign line_color = true
    assign line_color_section = section.settings.line_color
  endif
  assign background_color = false
  if section.settings.background_color.alpha != 0.0 and section.settings.background_color.alpha != blank
    assign background_color = true
    assign background_color_section = section.settings.background_color
  endif
  if section.settings.background_gradient != blank
    assign background_color = true
    assign background_color_section = section.settings.background_gradient
  endif
-%}

{% style %}
  .dynamic-section-{{ section.id }} {
    --section-padding-top-mobile: {{ section.settings.padding_top_mobile }}px;
    --section-padding-top-desktop: {{ section.settings.padding_top_desktop }}px;
    --section-padding-bottom-mobile: {{ section.settings.padding_bottom_mobile }}px;
    --section-padding-bottom-desktop: {{ section.settings.padding_bottom_desktop }}px;
    --section-margin-bottom-mobile: {{ section.settings.margin_bottom_mobile }}px;
    --section-margin-bottom-desktop: {{ section.settings.margin_bottom_desktop }}px;
    {%- if text_color -%}
    --color_title_text:{{ text_color_section }};
    --color_text:{{ text_color_section }};
    --color_text_modify_5:{{ text_color_section | color_modify: 'alpha', 0.5 }};
    --color_accent:{{ text_color_section }};
    --button_primary_background:{{ text_color_section }};
    --button_primary_border:{{ text_color_section }};
    --button_secondary_border:{{ text_color_section }};
    --button_secondary_text:{{ text_color_section }};
    {%- endif -%}
    {%- if text_color_hover -%}
    --color_text_hover:{{ text_color_hover_section }};
    {%- endif -%}
    {%- if line_color -%}
    --color_border:{{ line_color_section }};
    {%- endif -%}
    {%- if button_color -%}  
      --button_primary_text:{{ button_color_section }};
      --button_secondary_background:{{ button_color_section }};
    {%- endif -%}  
    {%- if background_color -%}
      --color_background_outline:{{ section.settings.background_color }};
      --color_background:{{ background_color_section }};
      --color_background_section:{{ background_color_section }};
    {%- endif -%}
  }
{% endstyle %}
<div class="dynamic-section dynamic-section-{{ section.id }}{% if full_width %} section-background{% endif %}">  
  <section data-section-id="{{ section.id }}" 
           data-section-type="slider-{{ section.id }}"
           data-url="{{ 'script.slider.js' | asset_url }}"
           data-slider-use="true"
           data-slider-breakpoint="large"
           class="article-wrapper{% unless article.image and section.settings.enable_image %} article-wrapper-no-image{% endunless %}{% if full_width %} section-skip{% endif %}">
    <div class="section-padding-top section-padding-bottom section-margin-bottom{% if section.settings.padding_border %} section-border{% endif %}{% unless full_width %} section-background{% endunless %}">
      {% if article.image and section.settings.enable_image %}        
        <figure class="{{ section.settings.insta_filter }} article-image height-padding-{{ section.settings.image_height }} relative" data-article-image>
          {%- liquid
            assign img_src = article.image
            if full_width
              assign size = img_src.width
              assign sizes = '(min-width: 3440px) 3440px, 100vw'
            else
              assign size = 1240
              assign sizes = '(min-width: 1280px) 1240px, (min-width: 960px) calc(100vw - 40px), 100vw'
            endif          
            capture alt
              if img_src.alt != blank
                echo img_src.alt | escape
              else
                echo img_src | split: '/' | last | replace: '-', ' ' | replace: '_', ' ' | split: '.' | first | capitalize
              endif
            endcapture
            if section.settings.image_height != 'original'
              render 'image.load', img_src: img_src, size: size, new_size: size, padding: section.settings.image_height, sizes: sizes, alt: alt, image_position: section.settings.image_position, background: true, lazy: lazy, full_width: full_width
            else
              render 'image.load', img_src: img_src, size: size, new_size: size, sizes: sizes, alt: alt, lazy: lazy, full_width: full_width
            endif
            if full_width
              assign size = 1900
            else
              assign size = 1240
            endif
            if section.settings.image_background or section.settings.image_height != 'original'
              render 'image.sizes', note: true,  mobile_size: 768, desktop_size: size, padding_mobile: section.settings.image_height, padding_desktop: section.settings.image_height, new_size_mobile: 768, new_size_desktop: 1240
            else
              render 'image.sizes', note: true, mobile_size: 768, desktop_size: size
            endif
          -%}
        </figure>
      {% endif %}
      <div class="main-article container container-inner">
        <article class="article">
          {%- render 'block.masthead', section: section, page_title: article.title -%}  
          {% if section.settings.include_author or section.settings.include_date or article.comments_enabled? or section.settings.include_tags and article.tags.size > 0 %}            
            <p class="article-publication-info">    
              {% if section.settings.include_author %}{{ 'article.author' | t: author: article.author }}{% if section.settings.include_date or article.comments_enabled? %}<br/>{% endif %}{% endif %}    
              {% if section.settings.include_date %}<small>{{ article.published_at | date: format: settings.month_day_year }}</small>{% if article.comments_enabled? %}<br/>{% endif %}{% endif %}    
              {% if article.comments_enabled? %}<a href="#article-comments" title="{{ 'article.comments_count' | t: count: article.comments_count | escape }}" class="article-comment-count"><small>{{ 'article.comments_count' | t: count: article.comments_count }}</small></a>{% endif %}
            </p>
          {% endif %}
          <div class="article-rte rte">
            {%- liquid
              echo article.content
              for block in section.blocks
                render block
              endfor
            -%}
          </div>          
          {%- liquid
            if section.settings.include_tags and article.tags.size > 0
              capture tags
                for tag in article.tags
                  echo tag | link_to_tag: tag
                  unless forloop.last
                    echo ', '
                  endunless
                endfor
              endcapture
              echo '<p class="article-tags">'
                echo 'blog.tags_html' | t: tags: tags
              echo '</p>'
            endif
          -%}  
        </article>
        <div class="article-column slider-container section-card-wrapper">
          <div class="content-details-sticky">
            {%- liquid
              if section.settings.enable_social_sharing
                echo '<div class="content-block">'
                  render 'block.social.share'
                echo '</div>'
              endif            
              assign current_found = false
              assign done = false
              for a in blog.articles
                if current_found and done == false
                  assign next_article = a
                  assign done = true
                endif
                unless done
                  if a.id == article.id
                    assign current_found = true
                  else
                    assign prev_article = a
                  endif
                endunless
              endfor
            -%}    
            {% if prev_article or next_article %}
              <nav class="content-block article-pagination">
                <a class="article-pagination-blog underline" href="{{ blog.url }}" title="{{ 'article.pagination.blog' | t: title: blog.title | escape }}">{{ 'article.pagination.blog' | t: title: blog.title }}</a>
                <span>
                  {% if prev_article %}      
                    <span class="rtl">
                      <a href="{{ prev_article.url }}" title="{{ 'article.pagination.next' | t | escape }}: {{ prev_article.title | escape }}" class="link-group" tabindex="-1">
                        <span class="link-arrow">{%- render 'icons.theme', id: 'arrow-long-r', size: 18 -%}</span>
                        <span><span class="link-text">{{ 'article.pagination.next' | t }}</span></span>
                      </a>
                    </span>
                  {% endif %}
                  {% if next_article %}
                    <a href="{{ next_article.url }}" title="{{ 'article.pagination.previous' | t | escape }}: {{ next_article.title | escape }}" class="link-group" tabindex="-1">
                      <span><span class="link-text">{{ 'article.pagination.previous' | t }}</span></span>
                      <span class="link-arrow">{%- render 'icons.theme', id: 'arrow-long-r', size: 18 -%}</span>
                    </a>
                  {% endif %}
                </span>
              </nav>
            {% endif %}
            {%- liquid               
              if section.settings.enable_newsletter
                echo '<div class="content-block">'
                  render 'block.newsletter', section: section, block: section
                echo '</div>'
              endif            
              if section.settings.enable_articles
                assign current_article = article
                assign size = 458
                assign sizes = '(min-width: 1240px) 258px, (min-width: 768px) 20vw, calc(64vw - 30px)'
                echo '<div class="content-block slider large scroll-bar-h"><div class="section-card-rows mobile-rows-of-2 desktop-rows-of-5">'                  
                  assign current_article = article
                  assign counter = 0
                  assign break_at = section.settings.enable_articles_number                  
                  for article in blog.articles                  
                    unless article.handle == current_article.handle
                      render 'block.article.loop', section: section, article: article, size: size, sizes: sizes, lazy: lazy, padding: section.settings.image_height, excerpt: 0, forloop: forloop                  
                      assign counter = counter | plus: 1
                      if counter == break_at
                        break
                      endif                  
                    endunless
                  endfor
                echo '</div></div>'
              endif
            -%}
          </div>
        </div>        
        {% if article.comments_enabled? %}
          <aside id="article-comments">
            {% if article.comments_count > 0 %}
              <div class="comments-list">
                <h4>{{ 'article.comments.title' | t }}</h4>
                {% paginate article.comments by 10 %}
                  {% for comment in article.comments %}            
                    <article class="comment" id="{{ comment.id }}">
                      <h5 class="comment-author">
                        <a href="{{ comment.url }}" title="{{ comment.created_at | date: format: settings.month_day_year | escape }}" class="comment-date">
                          {{ comment.author }}<br/>
                          <small>{{ comment.created_at | date: format: settings.month_day_year }}</small>
                        </a>
                      </h5>
                      {{ comment.content }}
                    </article>
                  {% endfor %}    
                  {%- liquid
                    if paginate.previous or paginate.next
                      assign title = 'article.comments.title' | t
                      render 'pagination', paginate: paginate, title: title, id: '#article-comments'
                    endif
                  -%}    
                {% endpaginate %}
              </div>
            {% endif %}
            <div class="comments-submit">
              <h4>{{ 'article.comments.leave_a_comment' | t }}</h4>
              {% form article %}
                {% if form.posted_successfully? %}
                  <p class="text-center success-message">{% if blog.moderated? %}{{ 'article.comments.comment_pending' | t }}{% else %}{{ 'article.comments.comment_success' | t }}{% endif %}</p>
                {% endif %}              
                {%- render 'form.errors', form: form -%}  
                <div class="input-wrapper {% if form.errors contains 'author' %}error{% endif %}">
                  <label for="comment-name">{{ 'general.form.name' | t }} {{ form.errors.messages['author'] }}</label>
                  <input class="input-field" id="comment-name" name="comment[author]" type="text" placeholder="{{ 'general.form.name_placeholder' | t | escape }}" value="{{ form.author }}" aria-required="true" required>
                </div>  
                <div class="input-wrapper {% if form.errors contains 'email' %}error{% endif %}">
                  <label for="comment-email">{{ 'general.form.email' | t }} {{ form.errors.messages['email'] }}</label>
                  <input id="comment-email" 
                         class="input-field" 
                         name="comment[email]" 
                         type="email" 
                         autocorrect="off" 
                         autocapitalize="off" 
                         autocomplete="email" 
                         pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$"
                         placeholder="{{ 'general.form.email_placeholder' | t | escape }}" 
                         value="{{ form.email }}" 
                         aria-required="true" 
                         required>
                </div>  
                <div class="input-wrapper {% if form.errors contains 'body' %}error{% endif %}">
                  <label for="comment-body">{{ 'general.form.message' | t }} {{ form.errors.messages['body'] }}</label>
                  <textarea class="input-field" name="comment[body]" id="comment-body" placeholder="{{ 'general.form.message_placeholder' | t | escape }}" aria-required="true" required>{{ form.body }}</textarea>
                </div>  
                <div class="input-wrapper">
                  <button type="submit" class="btn btn-primary">{{ 'article.comments.submit' | t }}</button>
                </div>
              {% endform %}
            </div>    
          </aside>
        {% endif %}
      </div>
    </div>
  </section>
</div>
